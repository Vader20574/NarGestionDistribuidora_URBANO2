<Window x:Class="PresentacionNetFra.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentacionNetFra.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="EquipoDataGrid" ItemsSource="{Binding equiposResgistrados}" HorizontalAlignment="Left" Height="102" Margin="126,260,0,0" VerticalAlignment="Top" Width="533"/>
        <TextBox x:Name="textBox1" Text="{Binding nuevoEquipo.Codigo}" HorizontalAlignment="Left" Height="46" Margin="203,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="textBox2" Text="{Binding nuevoEquipo.Descripcion}"  HorizontalAlignment="Left" Height="36" Margin="203,87,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <TextBox x:Name="textBox3" Text="{Binding nuevoEquipo.Descripcion2}"  HorizontalAlignment="Left" Height="38" Margin="203,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="228"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="43" Margin="561,123,0,0" VerticalAlignment="Top" Width="170" Click="Button_Click"/>

    </Grid>
</Window>
