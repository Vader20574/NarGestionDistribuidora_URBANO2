        <TextBox x:Name="txtRuta" HorizontalAlignment="Left" Height="20" Margin="37,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Grid.ColumnSpan="2"/>
        <Button x:Name="btnMigrar" Content="Cambiar" HorizontalAlignment="Left" Height="27" Margin="352,427,0,0" VerticalAlignment="Top" Width="117" Click="btnMigrar_Click" Grid.Column="1"/>

